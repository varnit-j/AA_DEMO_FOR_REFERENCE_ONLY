# Database Configuration
POSTGRES_DB=flight_booking
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Django Secret Keys (Change in production)
DJANGO_SECRET_KEY_BACKEND=backend-service-secret-key-change-in-production
DJANGO_SECRET_KEY_PAYMENT=payment-service-secret-key-change-in-production
DJANGO_SECRET_KEY_LOYALTY=loyalty-service-secret-key-change-in-production
DJANGO_SECRET_KEY_UI=ui-service-secret-key-change-in-production

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Service URLs (for inter-service communication)
BACKEND_SERVICE_URL=http://backend-service:8001
PAYMENT_SERVICE_URL=http://payment-service:8002
LOYALTY_SERVICE_URL=http://loyalty-service:8003
